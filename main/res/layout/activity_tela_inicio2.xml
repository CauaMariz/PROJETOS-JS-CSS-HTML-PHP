<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#115994"
    android:paddingLeft="30px"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="55dp">

    <EditText
        android:id="@+id/nota1"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:layout_marginTop="116dp"
        android:height="100px"
        android:background="@drawable/rounded_textview"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="30px"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/nota2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.809" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Inserir nota 2:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="416dp"
        android:layout_height="68dp"
        android:width="1000px"
        android:background="#10226D"
        android:fontFamily="@font/amiko"
        android:gravity="center"
        android:padding="30px"
        android:shadowColor="#3A3A3A"
        android:text="Bem vindo ao programa de calcular notas!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textColorLink="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-28dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:text="Inserir nota 1:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_textview"
        android:onClick="media"
        android:text="Calcular média"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/nota2"
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:background="@drawable/rounded_textview"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="30px"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/campMedia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.849" />

    <TextView
        android:id="@+id/campMedia"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:background="@drawable/rounded_textview"
        android:padding="20px"
        android:shadowColor="#575757"
        android:text="Média do aluno:"
        android:textColor="#FFFDFD"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <TextView
        android:id="@+id/campWelcomeUser"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:width="200px"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:padding="10px"
        android:paddingLeft="30px"
        android:text="Bem vindo "
        android:textAlignment="textStart"
        android:textColor="#F6F6F6"
        android:textSize="20sp"
        app:circularflow_angles="10px"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>